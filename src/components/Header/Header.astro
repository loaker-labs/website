        <!--<ThemeIcon buttonClass="cursor-pointer m-2 p-2 flex items-center self-center bg-transparent border-transparent hover:scale-105 hover:-translate-y-0.5 duration-300"/>-->


        <a class="hidden 2xl:flex m-2 p-4 ml-6 self-center font-bold text-l whitespace-nowrap xl:flex text-black items-center hover:bg-opacity-80 bg-[#4FDAB8] duration-150 no-underline border-2 rounded-lg" href={`${import.meta.env.BASE_URL}demo`}>
            Get a demo
        </a>

        <Hamburger classHamburgerButton="m-4 xl:hidden flex rounded-lg border-solid border-2 bg-transparent p-2 mx-2 h-auto cursor-pointer hover:bg-sky-400 self-center items-center"/>
    </div>
