---
import BaseLayout from '@layouts/BaseLayout.astro';
import Roadmap from '@components/Roadmap.astro';
---

<BaseLayout betweenMainAndFooterClass="grow" mainClass="w-[95%] place-content-center text-center items-center self-center mt-12 flex flex-col">

	<div class="flex flex-col gap-10 w-full">
		<h1 class="text-black font-bold text-7xl leading-0 m-0 p-12"><span class="bg-clip-text text-transparent bg-gradient-to-r from-[#4FD9BC] to-[#52C8E8]">Roadmap</span></h1>
		<Roadmap/>
	</div>

</BaseLayout>