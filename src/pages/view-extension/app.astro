---
import BaseLayout from '../../layouts/BaseLayout.astro';
---


<BaseLayout betweenMainAndFooterClass="grow" mainClass="w-4/5 gap-16 place-content-center text-center items-center self-center mt-24 flex flex-col">

    <button id="buttonCreate" class="appearance-none font-bold m-8 p-4 flex place-self-start text-center text-2xl rounded-xl text-white bg-[#350f63] cursor-pointer hover:scale-105 ease-in-out duration-300 border-fuchsia-600 hover:drop-shadow-[0_0_6px_rgba(255,0,255,1)]">Add credentials  </button>
   
    <div id="modale" class="hidden h-screen w-screen backdrop-blur-md fixed place-content-center z-30 bg-transparent">
        <div class="flex flex-col self-center z-30 gap-6 p-4 border border-solid rounded-xl bg-violet-900">
            <button id="buttonClose" class="appearance-none self-end h-12 w-12 flex text-center place-content-center text-2xl rounded-xl text-white bg-opacity-40 bg-slate-500 cursor-pointer hover:scale-105 ease-in-out duration-300 border-slate-400">x</button>
            <input id="Website" class="font-bold text-left p-4 text-xl text-white outline-none border-none self-center bg-neutral-500 rounded-lg" placeholder="Website" value=""/>
            <input id="Login" class="font-bold text-left p-4 text-xl text-white outline-none border-none self-center bg-neutral-500 rounded-lg" placeholder="Login" value=""/>
            <button id="add" class="appearance-none self-end font-bold p-4 flex place-self-start text-center text-2xl rounded-xl text-white bg-[#350f63] cursor-pointer hover:scale-105 ease-in-out duration-300 border-fuchsia-600 hover:drop-shadow-[0_0_6px_rgba(255,0,255,1)]">Add</button>
        </div>
    </div>

    <script is:inline>
        const handleCreate = () => {
            document.getElementById('modale').classList.remove('hidden');
            document.getElementById('modale').classList.add('flex');
        }

        const handleClose = () => {
            document.getElementById('modale').classList.add('hidden');
            document.getElementById('modale').classList.remove('flex');
        }

        const handleAdd = () => {
            const list = document.getElementById('list');
            const Website = document.getElementById('Website').value;
            const Login = document.getElementById('Login').value;

            let lineToAdd = '<div class="flex flex-row bg-[#1D013E] w-full border-2 border-solid border-b-fuchsia-600 border-r-fuchsia-600 border-l-fuchsia-600 border-t-0"><p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">'+Login+'</p><p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border-4 border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">'+Website+'</p><div class="flex basis-1/3 place-content-center"><button class="flex m-2 p-2 bg-[#350f63] text-center text-white text-lg font-bold cursor-pointer place-content-center self-center border border-solid rounded-lg border-fuchsia-600 hover:scale-105 duration-300 ease-in-out">Restore private key</button></div></div>'

            list.insertAdjacentHTML('beforeend', lineToAdd);

            handleClose();
        }

        document.getElementById("buttonCreate").addEventListener("click", handleCreate);
        document.getElementById("buttonClose").addEventListener("click", handleClose);
        document.getElementById("add").addEventListener("click", handleAdd);
    </script>


    <div id="list" class="flex flex-col w-full drop-shadow-[0_0_10px_rgba(255,0,255,0.7)]">
        <div class="flex flex-row bg-[#350f63] w-full rounded-t-lg border-2 border-solid border-fuchsia-600">
            <p class="font-bold text-2xl self-center py-4 my-0 basis-1/3 border border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-fuchsia-600">Website</p>
            <p class="font-bold text-2xl self-center py-4 my-0 basis-1/3 border-4 border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-fuchsia-600">Login</p>
            <div class="flex basis-1/3 text-2xl text-white font-bold text-center place-content-center self-center">Restore</div>
        </div>

        <div class="flex flex-row bg-[#1D013E] w-full border-2 border-solid border-b-fuchsia-600 border-r-fuchsia-600 border-l-fuchsia-600 border-t-0">
            <p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">teams.com</p>
            <p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border-4 border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">jean.dupont@societe.com</p>
            <div class="flex basis-1/3 place-content-center items-center py-2">
                <input id="password1" class="font-bold text-left p-2 text-xl text-white outline-none border-none bg-transparent" disabled type="password" value="monmotdepass" />
                <svg id="visibility1" class="flex p-2 cursor-pointer hover:scale-105 duration-300" width="40px" height="40px" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="white" d="M12 5C5.63636 5 2 12 2 12C2 12 5.63636 19 12 19C18.3636 19 22 12 22 12C22 12 18.3636 5 12 5Z" /><path stroke="white" d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z"/>
                    <line id="lineVisibility1" stroke="white" x1="1" y1="1" x2="24" y2="24" />
                </svg>
                <script is:inline>
                    function handleVisibility() {
                        var inputPassword = document.getElementById("password1");
                        var lineVisibility = document.getElementById("lineVisibility1");
                        if (inputPassword.type === "password") {
                            inputPassword.type = "text";
                            lineVisibility.style.display = "none";
                        } else {
                            inputPassword.type = "password";
                            lineVisibility.style.display = "block";
                        }
                        } 
                    document.getElementById("visibility1").addEventListener("click", handleVisibility);
                </script>
            </div>
        </div>

        <div class="flex flex-row bg-[#1D013E] w-full border-2 border-solid border-b-fuchsia-600 border-r-fuchsia-600 border-l-fuchsia-600 border-t-0">
            <p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">teams.com</p>
            <p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border-4 border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">jean.dupont@societe.com</p>
            <div class="flex basis-1/3 place-content-center items-center py-2">
                <input id="password2" class="font-bold text-left p-2 text-xl text-white outline-none border-none bg-transparent" disabled type="password" value="monmotdepass" />
                <svg id="visibility2" class="flex p-2 cursor-pointer hover:scale-105 duration-300" width="40px" height="40px" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="white" d="M12 5C5.63636 5 2 12 2 12C2 12 5.63636 19 12 19C18.3636 19 22 12 22 12C22 12 18.3636 5 12 5Z" /><path stroke="white" d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z"/>
                    <line id="lineVisibility" stroke="white" x1="1" y1="1" x2="24" y2="24" />
                </svg>
                <script is:inline>
                    function handleVisibility() {
                        var inputPassword = document.getElementById("password2");
                        var lineVisibility = document.getElementById("lineVisibility2");
                        if (inputPassword.type === "password") {
                            inputPassword.type = "text";
                            lineVisibility.style.display = "none";
                        } else {
                            inputPassword.type = "password";
                            lineVisibility.style.display = "block";
                        }
                        } 
                    document.getElementById("visibility2").addEventListener("click", handleVisibility);
                </script>
            </div>
        </div>      
        
        <div class="flex flex-row bg-[#1D013E] w-full border-2 border-solid border-b-fuchsia-600 border-r-fuchsia-600 border-l-fuchsia-600 border-t-0">
            <p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">teams.com</p>
            <p class="font-bold text-xl self-center py-4 my-0 basis-1/3 border-4 border-r-2 border-b-0 border-t-0 border-l-0 h-fit border-solid border-neutral-500">jean.dupont@societe.com</p>
            <div class="flex basis-1/3 place-content-center items-center py-2">
                <input id="password3" class="font-bold text-left p-2 text-xl text-white outline-none border-none bg-transparent" disabled type="password" value="monmotdepass" />
                <svg id="visibility3" class="flex p-2 cursor-pointer hover:scale-105 duration-300" width="40px" height="40px" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="white" d="M12 5C5.63636 5 2 12 2 12C2 12 5.63636 19 12 19C18.3636 19 22 12 22 12C22 12 18.3636 5 12 5Z" /><path stroke="white" d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z"/>
                    <line id="lineVisibility3" stroke="white" x1="1" y1="1" x2="24" y2="24" />
                </svg>
                <script is:inline>
                    function handleVisibility() {
                        var inputPassword = document.getElementById("password3");
                        var lineVisibility = document.getElementById("lineVisibility3");
                        if (inputPassword.type === "password") {
                            inputPassword.type = "text";
                            lineVisibility.style.display = "none";
                        } else {
                            inputPassword.type = "password";
                            lineVisibility.style.display = "block";
                        }
                        } 
                    document.getElementById("visibility3").addEventListener("click", handleVisibility);
                </script>
            </div>
        </div>

    </div>


</BaseLayout>
