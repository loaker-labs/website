    if (scrollTopPosition > lastScrollTop) {
      console.log('scrolling down');
      this.document.getElementById("nav")
    } else if (scrollTopPosition < lastScrollTop) {
      console.log('scrolling up');
    }
    lastScrollTop =
      scrollTopPosition <= 0 ? 0 : scrollTopPosition;
  },
  false,
);
</script>