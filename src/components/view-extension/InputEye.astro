---
const  { id }  = Astro.props;
---
<div class="flex flex-row place-content-center items-center p-0 gap-x-0 bg-neutral-700 w-fit self-center border border-neutral-100 rounded-xl">
    <input id={"password"+id} class="flex w-fit self-center font-bold text-left p-2 m-0 text-xl text-white outline-none bg-neutral-700 rounded-xl" type="password" minlength="8" required placeholder="Master password" />
    <svg id={"visibility"+id} class="flex p-2 cursor-pointer hover:scale-125 duration-300" width="40px" height="40px" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="white" d="M12 5C5.63636 5 2 12 2 12C2 12 5.63636 19 12 19C18.3636 19 22 12 22 12C22 12 18.3636 5 12 5Z" /><path stroke="white" d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z"/>
        <line id={"line"+id} stroke="white" x1="1" y1="1" x2="24" y2="24" />
    </svg>
    <script is:inline>
        function handleVisibility() {
            var inputPassword = document.getElementById({"password"+id});
            var lineVisibility = document.getElementById({"line"+id});
            if (inputPassword.type === "password") {
                inputPassword.type = "text";
                lineVisibility.style.display = "none";
            } else {
                inputPassword.type = "password";
                lineVisibility.style.display = "block";
            }
            } 
        document.getElementById({"visibility"+id}).addEventListener("click", handleVisibility);
    </script>
</div>